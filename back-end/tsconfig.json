{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "public",
        "isolatedModules": false,
        "target": "ES5",
        "module": "commonjs",
        "sourceMap": true,
        "lib": ["es2015"],
        "experimentalDecorators": true,
        "pretty": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/data/model/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}